<h1>Listing your albums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%=h album.name %></td>
    <td><%=h album.description %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td>
      <%= link_to 'Destroy', album,
            :confirm => 'Are you sure?
All pictures in this album will be DELETED.',
            :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New album', new_album_path %>
