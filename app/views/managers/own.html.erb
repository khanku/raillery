<h1>
  your pictures:
</h1>

<div align="center">

<% if @pictures.size == 0%>
  <i>No pictures found.</i>
<% else %>

  <div id="images-frame">

  <% number_of_pictures = 0 %>
  <% for picture in @pictures %>
  <% number_of_pictures += 1 %>

    <%= link_to image_tag(get_pics_root + picture.thumb_path),
        get_pics_root + picture.path,
        { :rel => "lightbox[pictures]", :title => picture.name } %>
    <%= link_to image_tag("details.png"), picture_path(picture) %>
    <span style="position: relative; top: -22px; left: -21px">
      <%= link_to image_tag("delete.png"), terminate_picture_path(picture),
            :confirm => 'Are you sure about that?',
            :method => :post %>
    </span>
    &nbsp;&nbsp;

    <% if (number_of_pictures % @pictures_in_a_row.to_i == 0) %>
    <br />
    <% end %>

  <% end %>

  </div>

  <%= render :partial => "shared/pages_navigation" %>

<% end %>

</div>
